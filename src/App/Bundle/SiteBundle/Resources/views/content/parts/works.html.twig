<div class="bg-grey">
<section id="projects" class="container">
    <h2>{{ 'app.title.project'|trans }}</h2>
    <p class="lead">
        “{{ 'app.quote.project'|trans }}”<br>- {{ 'app.quote.project.author'|trans }}
    </p>

    <hr>
    <div class="row">
        {% for work in works %}
        <div class="col-md-6 col-sm-12 col-xs-12">
            <figure class="effect">
                {{ ez_render_field(work, 'image') }}

                <figcaption>
                    <h3>{{ ez_render_field(work, 'name') }}</h3>
                    {{ ez_render_field(work, 'description_site') }}
                    <p><strong>Tags:</strong> <br>{{ ez_render_field(work, 'description') }}</p>
                    <a href="http://studiomals.com" target="_blank">{{ 'app.show_more'|trans }}</a>
				<span class="icon">
					<i class="fa fa-external-link" aria-hidden="true"></i>
				</span>
                </figcaption>
            </figure>
        </div>
        {% endfor %}
    </div>
</section>
    </div>