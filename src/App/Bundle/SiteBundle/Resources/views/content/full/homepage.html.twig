{% extends "AppSiteBundle::pagelayout.html.twig" %}
{% block content %}
    {% include 'AppSiteBundle::pagelayout/page_header.html.twig' %}
    {% include 'AppSiteBundle::pagelayout/page_navigation.html.twig' %}
    <section id="profile" class="container">
        <h2>{{ 'app.title.presentation'|trans }}</h2>
        <p class="lead">{{ 'app.presentation.subtitle'|trans }}</p>

        <hr>

        <div class="row">
            <div class="col-md-4">
                <h3>{{ 'app.title.about'|trans }}</h3>
                {{ ez_render_field(content, 'text_bio') }}
            </div>
            <div class="col-md-4 text-center">
                {{ ez_render_field(content, 'image_bio') }}
            </div>
            <div class="col-md-4">
                <h3>{{ 'app.title.details'|trans }}</h3>
                <p>
                    <strong>{{ 'app.title.name'|trans }}:</strong><br>
                    Lucas Simonin<br>
                    <strong>{{ 'app.title.age'|trans }}:</strong><br>
                    {{ 'app.title.my_age'|trans }}<br>
                    <strong>{{ 'app.title.location'|trans }}:</strong><br>
                    <a href="{{ ez_field_value(content, 'city_url') }}" target="_blank">{{ ez_field_value(content, 'city_url').text }}</a></p>

            </div>
        </div>			</section>
    <div class="bg-grey">
    <section id="experiences" class="container">
        <h2>{{ 'app.title.xp'|trans }}</h2>
        <p class="lead">
            “{{ 'app.quote.xp'|trans }}”<br>- {{ 'app.quote.xp.author'|trans }}
        </p>

        <hr>

        <h3>{{ 'app.title.education'|trans }}</h3>


        <div class="experiences">


            {% for education in educations %}
                {% include 'AppSiteBundle::content/parts/experience.html.twig' with {'item': education} %}
            {% endfor %}


        </div>



        <hr>

        <h3>{{ 'app.title.career'|trans }}</h3>


        <div class="experiences">
            {% for xp in xps %}
                {% include 'AppSiteBundle::content/parts/experience.html.twig' with {'item': xp} %}
            {% endfor %}
        </div>

    </section>
    </div>
    <section id="abilities" class="container">
        <h2>{{ 'app.title.abilities'|trans }}</h2>
        <p class="lead">
            “{{ 'app.quote.skill'|trans }}”<br>- {{ 'app.quote.skill.author'|trans }}
        </p>
        <hr>
        <h3>{{ 'app.title.skill'|trans }}</h3>
        <div class="row">
            {% include 'AppSiteBundle::content/parts/skill.html.twig' with {'items': skills} %}
        </div>
        <hr>
        <h3>{{ 'app.title.language'|trans }}</h3>
        <div class="row">
            {% include 'AppSiteBundle::content/parts/skill.html.twig' with {'items': languages} %}
        </div>
        <hr>
        <h3>{{ 'app.title.tools'|trans }}</h3>
        <div class="row">
            {% include 'AppSiteBundle::content/parts/skill.html.twig' with {'items': tools} %}
        </div>
    </section>
    {% if works|length > 0 %}
        {% include 'AppSiteBundle::content/parts/works.html.twig' %}
    {% endif %}
    {% include 'AppSiteBundle::content/parts/contact.html.twig' %}
{% endblock %}