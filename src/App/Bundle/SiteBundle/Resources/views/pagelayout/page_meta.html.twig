<title>
    {% if not ez_is_field_empty(content, 'meta_title') %}
        {{ ez_field_value(content, 'meta_title') }}
    {% else %}
        {{ 'app.global.meta_title'|trans }}
    {% endif %}
</title>
{% if not ez_is_field_empty(content, 'meta_description') %}
    <meta name="description" content="{{ ez_field_value(content, 'meta_description') }}">
{% endif %}

<meta name="robots" content="INDEX, FOLLOW">
<meta name="keywords" content="CV, Lucas, SIMONIN, web, PHP, eZ, Symfony">
<meta name="referrer" content="origin">

<meta property="og:title" content="{{ 'app.global.meta_title'|trans }}" />
<meta property="og:type" content="website" />
<meta property="og:url" content="https://lucasimonin.me" />
<meta property="og:image" content="{{ ez_field_value(content, 'image_bio').uri }}" />