{% spaceless %}
    <div class="bg-grey">
        <section id="experiences" class="container">
            <h2>{{ 'app.title.xp'|trans }}</h2>
            <p class="lead">
                “{{ 'app.quote.xp'|trans }}”<br>- {{ 'app.quote.xp.author'|trans }}
            </p>
            <hr>
            <h3>{{ 'app.title.education'|trans }}</h3>
            <div class="experiences">
                {% for education in params.educations %}
                    {% include 'content/parts/experience.html.twig' with {'item': education} %}
                {% endfor %}
            </div>
            <hr class="print-margin-top">
            <h3>{{ 'app.title.career'|trans }}</h3>
            <div class="experiences">
                {% for xp in params.xps %}
                    {% include 'content/parts/experience.html.twig' with {'item': xp} %}
                {% endfor %}
            </div>
        </section>
    </div>
{% endspaceless %}