{% spaceless %}
    <div class="experience row wow fadeInLeft">
        <div class="col-md-4">
            <h4>{{ ez_field_value(item, 'name') }}</h4>
            <p class="experience-period">
                <i class="fa fa-clock-o"></i>
                {{ ez_render_field(item, 'duration') }}</p>
        </div>
        <div class="col-md-8">
            <p>
                <strong>{{ ez_render_field(item, 'name_description') }}</strong>
            <p>
            {% if not ez_is_field_empty(item, 'description') %}
                {{ ez_render_field(item, 'description') }}
            {% endif %}
            {% if not ez_is_field_empty(item, 'city') or not ez_is_field_empty(item, 'website') %}
                <p class="experience-details">
                    {% if not ez_is_field_empty(item, 'city') %}
                        <span class="location">
                            <i class="fa fa-map-marker"></i>
                            {{ ez_render_field(item, 'city') }}
                        </span>
                    {% endif %}
                    {% if not ez_is_field_empty(item, 'city') and not ez_is_field_empty(item, 'website') %}
                        <span class="seperator">|</span>
                    {% endif %}
                    {% if not ez_is_field_empty(item, 'website') %}
                        <span class="link">
                            <i class="fa fa-link" aria-hidden="true"></i>
                            <a rel="nofollow" href="{{ ez_field_value(item, 'website') }}" target="_blank">{{ ez_field_value(item, 'website') }}</a>
                        </span>
                    {% endif %}
                </p>
            {% endif %}
        </div>
    </div>
{% endspaceless %}